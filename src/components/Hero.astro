<section class="hero-section" data-bgcolor="#050505" data-textcolor="#ffffff">
    
    <div class="video-bg-container">
        <video autoplay muted loop playsinline class="bg-video">
            <source src="/assets/LONDRES.mp4" type="video/mp4">
        </video>
        <div class="video-overlay"></div>
    </div>

    <div class="corner-text top-left reveal-meta">GLOBAL FREQUENCY</div>
    <div class="corner-text top-right reveal-meta">EST. 199X</div>

    <div class="hero-content">
        <div class="logo-container">
            
            <div class="brand-part move-left">
                <span class="logo-text oscar-style">OSCAR</span>
            </div>
            
            <div class="brand-part move-right">
                <div class="herrera-box">
                    <span class="logo-text herrera-style">HERRERA</span>
                </div>
            </div>

        </div>

        <div class="scroll-icon reveal-meta">
            <div class="mouse"></div>
            <p>SCROLL</p>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    window.addEventListener('loader-complete', () => {
        const tl = gsap.timeline();

        // 1. Entrada con fuerza
        tl.from(".brand-part", {
            scale: 0.85,
            y: 50,
            opacity: 0,
            duration: 1.2,
            stagger: 0.15,
            ease: "power4.out"
        });

        // 2. Meta Info
        tl.from(".reveal-meta", { opacity: 0, y: 20, duration: 1 }, "-=0.8");

        // 3. ANIMACIÓN SCROLL (SEPARACIÓN)
        gsap.to(".move-left", {
            xPercent: -150, 
            scrollTrigger: {
                trigger: ".hero-section",
                start: "top top",
                end: "bottom top",
                scrub: 1
            }
        });

        gsap.to(".move-right", {
            xPercent: 150,
            scrollTrigger: {
                trigger: ".hero-section",
                start: "top top",
                end: "bottom top",
                scrub: 1
            }
        });
    });
</script>

<style>
    .hero-section {
        height: 100vh; width: 100%; position: relative;
        display: flex; align-items: center; justify-content: center;
        overflow: hidden;
    }

    /* --- FONDO --- */
    .video-bg-container { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; }
    .bg-video { width: 100%; height: 100%; object-fit: cover; }
    
    .video-overlay {
        position: absolute; top: 0; left: 0; width: 100%; height: 100%;
        /* CAMBIO CLAVE: Aumentada opacidad al 65% para que el blanco resalte mucho más */
        background: rgba(0,0,0,0.65); 
    }

    /* --- CONTENEDOR LOGO --- */
    .hero-content {
        z-index: 5; width: 100%; height: 100%;
        display: flex; flex-direction: column; align-items: center; justify-content: center;
    }

    .logo-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transform: skewX(-10deg); /* Inclinación del logo oficial */
        gap: 5px;
        margin-bottom: 40px;
    }

    .brand-part {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* --- TIPOGRAFÍA BASE --- */
    .logo-text {
        font-family: var(--font-display); /* Anton */
        font-size: 15vw; /* Un pelín más grande */
        line-height: 0.85;
        text-transform: uppercase;
        letter-spacing: -2px;
    }

    /* --- ESTILO 1: OSCAR (TEXTO BLANCO) --- */
    .oscar-style {
        color: #ffffff;
        /* CAMBIO: Sombra más potente y oscura para despegarlo del fondo */
        filter: drop-shadow(0 10px 20px rgba(0,0,0,0.8));
    }

    /* --- ESTILO 2: HERRERA (CAJA BLANCA) --- */
    .herrera-box {
        background-color: #ffffff;
        padding: 0 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        transform: translateX(10px); 
        /* CAMBIO: Añadida sombra a la caja para darle volumen */
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .herrera-style {
        color: #000000;
    }

    /* --- UI ELEMENTS --- */
    .corner-text {
        position: absolute; top: 40px; font-family: var(--font-mono); font-size: 0.9rem;
        letter-spacing: 2px; color: rgba(255,255,255,0.9); z-index: 10; text-transform: uppercase; font-weight: 600;
        text-shadow: 0 2px 5px rgba(0,0,0,0.8);
    }
    .top-left { left: 40px; } .top-right { right: 40px; }

    .scroll-icon {
        position: absolute; bottom: 40px; display: flex; flex-direction: column; align-items: center; gap: 10px;
    }
    .scroll-icon p {
        font-family: var(--font-mono); font-size: 0.7rem; letter-spacing: 2px; color: #fff; text-shadow: 0 2px 5px rgba(0,0,0,0.8);
    }
    .mouse {
        width: 20px; height: 35px; border: 2px solid #fff; border-radius: 15px; position: relative; box-shadow: 0 2px 5px rgba(0,0,0,0.8);
    }
    .mouse::before {
        content: ''; position: absolute; top: 5px; left: 50%; transform: translateX(-50%);
        width: 4px; height: 4px; background: #fff; border-radius: 50%; animation: scrollWheel 2s infinite;
    }
    @keyframes scrollWheel { 0% { top: 5px; opacity: 1; } 100% { top: 20px; opacity: 0; } }

    /* MÓVIL */
    @media (max-width: 768px) {
        .logo-text { font-size: 19vw; }
        .logo-container { transform: skewX(-8deg); gap: 2px; }
        .corner-text { top: 20px; font-size: 0.7rem; }
        .top-left { left: 20px; } .top-right { right: 20px; }
    }
</style>